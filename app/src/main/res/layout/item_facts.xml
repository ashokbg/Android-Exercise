<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            tools:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="@dimen/dimens_15sp"/>

    <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/tv_title"
            android:layout_alignParentEnd="true"
            tools:src="@tools:sample/avatars" android:layout_alignParentRight="true"/>

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_desc"
            android:layout_below="@+id/tv_title"
            android:layout_toStartOf="@+id/iv_pic"
            android:layout_alignParentLeft="true"
            android:layout_marginEnd="@dimen/dimens_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/app_name"
            android:textSize="@dimen/dimens_12sp"
            android:layout_toLeftOf="@+id/iv_pic" android:layout_marginRight="@dimen/dimens_10"/>
</RelativeLayout>